<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_xo5"
    tools:context="com.surached.project_tictactoe.MainActivity">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="30dp">

            <ImageView
                android:layout_width="240dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/login_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="Tic Tac Toe Game "
                android:textColor="#fff"
                android:textSize="30sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_photo"
                android:layout_centerHorizontal="true">


                <ImageView
                    android:id="@+id/profile_user"
                    android:layout_width="10dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/ip_address"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/profile_user"
                    android:backgroundTint="@android:color/holo_blue_bright"
                    android:hint="Opponet IP Address"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textColorHint="#90989e" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounder"
                android:layout_centerHorizontal="true">


                <ImageView
                    android:id="@+id/icon_username"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/username"/>

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginTop="9dp"
                    android:layout_toRightOf="@+id/icon_username"
                    android:background="#00ffffff"
                    android:hint="Username"
                    android:inputType="text"
                    android:padding="20px"
                    android:radius="10dp"
                    android:textColorHint="#9affffff"
                    android:textColor="#fff" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose X or O"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="#fff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="22dp"
                        android:background="@drawable/bg_x"
                        android:text="X"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_o"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="22dp"
                        android:background="@drawable/bg_o"
                        android:text="O"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>